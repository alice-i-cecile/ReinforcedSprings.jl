#:kivy 1.10.1

<Mass>:
    size: 20, 20 
    canvas:
        Color:
            rgba: 1, 0, 0, 1     
        Ellipse:
            pos: self.pos
            size: self.size

<PlayArea>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1     
        Rectangle:
            pos: self.parent.center_x - 0.8*(self.parent.width / 2), self.parent.center_y - 0.8*(self.parent.height / 2)
            size: 0.8*self.parent.width, 0.8*self.parent.height

<SpringGame>:
    contraption: main_contraption
    play_area: spring_play_area

    PlayArea:
        id: spring_play_area

    Contraption:
        id: main_contraption
        center: self.parent.center